generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL")
}

model User {
  id                        String                    @id @default(cuid())
  name                      String?
  pseudo                    String                    @default("Anonyme")
  email                     String                    @unique
  emailVerified             DateTime?
  image                     String?
  role                      Role                      @default(READER)
  isPremium                 Boolean                   @default(false)
  premiumUntil              DateTime?
  createdAt                 DateTime                  @default(now())
  updatedAt                 DateTime                  @updatedAt
  deletedAt                 DateTime?
  accounts                  Account[]
  collections               Collection[]
  comments                  Comment[]
  mealPlanContributions     MealPlanContributor[]     @relation("MealPlanContributions")
  recipes                   Recipe[]                  @relation("UserRecipes")
  sessions                  Session[]
  shoppingLists             ShoppingList[]            @relation("UserShoppingLists")
  shoppingListContributions ShoppingListContributor[] @relation("ShoppingListContributions")
  checkedIngredients        ShoppingListItem[]        @relation("CheckedIngredients")
  checkedStandaloneItems    StandaloneShoppingItem[]  @relation("CheckedStandaloneItems")
  activityLogs              UserActivityLog[]
  personalNotes             UserNote[]                @relation("UserPersonalNotes")
  recipeNotes               UserRecipeNote[]
  mealPlans                 WeeklyMealPlan[]          @relation("UserMealPlans")
  favorites                 Recipe[]                  @relation("UserFavorites")

  @@index([deletedAt])
  @@index([email, deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Recipe {
  id                 Int               @id @default(autoincrement())
  name               String
  description        String?
  category           String
  author             String            @default("Anonyme")
  imageUrl           String?
  videoUrl           String?
  preparationTime    Int               @default(0)
  cookingTime        Int               @default(0)
  rating             Float             @default(0)
  servings           Int               @default(1)
  difficulty         String            @default("MEDIUM")
  costEstimate       String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  userId             String?
  caloriesPerServing Int?
  deletedAt          DateTime?
  ratingCount        Int               @default(0)
  ratingSum          Float             @default(0)
  slug               String            @unique
  viewsCount         Int               @default(0)
  status             RecipeStatus      @default(PUBLIC)
  comments           Comment[]
  ingredients        Ingredient[]
  ingredientGroups   IngredientGroup[]
  plannedMeals       PlannedMeal[]     @relation("PlannedMealRecipe")
  user               User?             @relation("UserRecipes", fields: [userId], references: [id])
  recipeTags         RecipeTag[]
  steps              Step[]
  userNotes          UserRecipeNote[]
  collections        Collection[]      @relation("CollectionRecipes")
  favoritedBy        User[]            @relation("UserFavorites")

  @@index([slug])
  @@index([category])
  @@index([userId])
  @@index([createdAt])
  @@index([deletedAt])
  @@index([category, deletedAt])
  @@index([userId, deletedAt])
  @@index([deletedAt, createdAt])
  @@index([viewsCount])
}

model Comment {
  id        Int       @id @default(autoincrement())
  text      String
  rating    Float?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  recipeId  Int
  deletedAt DateTime?
  recipe    Recipe    @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([recipeId])
  @@index([userId])
  @@index([deletedAt])
  @@index([recipeId, deletedAt])
}

model Ingredient {
  id       Int              @id @default(autoincrement())
  name     String
  quantity Float?
  unit     String?
  recipeId Int
  groupId  Int?
  order    Int              @default(0)
  group    IngredientGroup? @relation(fields: [groupId], references: [id])
  recipe   Recipe           @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model IngredientGroup {
  id          Int          @id @default(autoincrement())
  name        String
  order       Int          @default(0)
  recipeId    Int
  ingredients Ingredient[]
  recipe      Recipe       @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model Step {
  id       Int    @id @default(autoincrement())
  order    Int
  text     String
  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model Tag {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  slug        String      @unique
  description String?
  color       String      @default("#6B7280")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  recipeTags  RecipeTag[]

  @@index([slug])
  @@index([name])
}

model RecipeTag {
  id        Int      @id @default(autoincrement())
  recipeId  Int
  tagId     Int
  createdAt DateTime @default(now())
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([recipeId, tagId])
  @@index([recipeId])
  @@index([tagId])
}

model Collection {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  color       String   @default("#f59e0b")
  icon        String   @default("folder")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipes     Recipe[] @relation("CollectionRecipes")

  @@unique([userId, name])
}

model UserRecipeNote {
  id        Int      @id @default(autoincrement())
  note      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  recipeId  Int
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])
}

model UserNote {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation("UserPersonalNotes", fields: [userId], references: [id], onDelete: Cascade)
}

model ShoppingListItem {
  id               Int            @id @default(autoincrement())
  ingredientName   String
  category         String
  store            String? // Enseigne/magasin (ex: "Auchan", "Boulangerie", null pour "Sans enseigne")
  isChecked        Boolean        @default(false)
  checkedAt        DateTime?
  checkedByUserId  String?
  weeklyMealPlanId Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  isManuallyAdded  Boolean        @default(false)
  checkedByUser    User?          @relation("CheckedIngredients", fields: [checkedByUserId], references: [id])
  weeklyMealPlan   WeeklyMealPlan @relation("ShoppingListItems", fields: [weeklyMealPlanId], references: [id], onDelete: Cascade)

  @@index([weeklyMealPlanId])
  @@index([weeklyMealPlanId, isManuallyAdded])
  @@index([weeklyMealPlanId, store])
}

model WeeklyMealPlan {
  id                    Int                   @id @default(autoincrement())
  name                  String
  weekStart             DateTime
  weekEnd               DateTime
  numberOfPeople        Int
  budget                String
  cookingTime           String
  mealTypes             String[]
  cuisinePreferences    String[]              @default([])
  avgCaloriesPerDay     Int?
  proteinGrams          Int?
  carbsGrams            Int?
  fatGrams              Int?
  estimatedCost         String?
  prepTips              String[]              @default([])
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  userId                String
  isPublic              Boolean               @default(false)
  deletedAt             DateTime?
  isFavorite            Boolean               @default(false)
  optimizedShoppingList Json?
  shoppingList          Json?
  contributors          MealPlanContributor[]
  meals                 PlannedMeal[]
  linkedShoppingLists   ShoppingList[]        @relation("LinkedShoppingLists")
  shoppingListItems     ShoppingListItem[]    @relation("ShoppingListItems")
  user                  User                  @relation("UserMealPlans", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([deletedAt])
  @@index([userId, deletedAt])
  @@index([isPublic, deletedAt])
}

model MealPlanContributor {
  id               Int            @id @default(autoincrement())
  role             String
  addedAt          DateTime       @default(now())
  weeklyMealPlanId Int
  userId           String
  user             User           @relation("MealPlanContributions", fields: [userId], references: [id], onDelete: Cascade)
  weeklyMealPlan   WeeklyMealPlan @relation(fields: [weeklyMealPlanId], references: [id], onDelete: Cascade)

  @@unique([weeklyMealPlanId, userId])
  @@index([userId])
  @@index([weeklyMealPlanId])
}

model PlannedMeal {
  id               Int            @id @default(autoincrement())
  dayOfWeek        String
  mealType         String
  name             String
  prepTime         Int
  cookTime         Int
  servings         Int
  calories         Int?
  ingredients      Json
  steps            Json
  recipeId         Int?
  isUserRecipe     Boolean        @default(false)
  weeklyMealPlanId Int
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  portionsUsed     Int            @default(1)
  timeSlot         String         @default("12:00")
  imageUrl         String?
  unsplashData     String?
  recipe           Recipe?        @relation("PlannedMealRecipe", fields: [recipeId], references: [id])
  weeklyMealPlan   WeeklyMealPlan @relation(fields: [weeklyMealPlanId], references: [id], onDelete: Cascade)
}

model ShoppingList {
  id               Int                       @id @default(autoincrement())
  name             String
  description      String?
  color            String                    @default("#10b981")
  icon             String                    @default("shopping-cart")
  userId           String
  weeklyMealPlanId Int?
  isPublic         Boolean                   @default(false)
  shareCode        String?                   @unique
  createdAt        DateTime                  @default(now())
  updatedAt        DateTime                  @updatedAt
  deletedAt        DateTime?
  isFavorite       Boolean                   @default(false)
  user             User                      @relation("UserShoppingLists", fields: [userId], references: [id], onDelete: Cascade)
  weeklyMealPlan   WeeklyMealPlan?           @relation("LinkedShoppingLists", fields: [weeklyMealPlanId], references: [id])
  contributors     ShoppingListContributor[]
  items            StandaloneShoppingItem[]

  @@index([userId])
  @@index([userId, deletedAt])
  @@index([weeklyMealPlanId])
  @@index([shareCode])
}

model StandaloneShoppingItem {
  id              Int          @id @default(autoincrement())
  name            String
  quantity        String?
  category        String
  store           String? // Enseigne/magasin
  isChecked       Boolean      @default(false)
  checkedAt       DateTime?
  order           Int          @default(0)
  checkedByUserId String?
  shoppingListId  Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  isManuallyAdded Boolean      @default(true)
  checkedByUser   User?        @relation("CheckedStandaloneItems", fields: [checkedByUserId], references: [id])
  shoppingList    ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)

  @@index([shoppingListId])
  @@index([shoppingListId, category])
  @@index([shoppingListId, isChecked])
  @@index([shoppingListId, store])
}

model ShoppingListContributor {
  id             Int          @id @default(autoincrement())
  role           String       @default("CONTRIBUTOR")
  addedAt        DateTime     @default(now())
  shoppingListId Int
  userId         String
  shoppingList   ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  user           User         @relation("ShoppingListContributions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([shoppingListId, userId])
  @@index([userId])
  @@index([shoppingListId])
}

model UserActivityLog {
  id         Int      @id @default(autoincrement())
  userId     String
  action     String
  entityType String?
  entityId   String?
  entityName String?
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([action, createdAt])
}

enum Role {
  ADMIN
  CONTRIBUTOR
  READER
  OWNER
}

enum RecipeStatus {
  DRAFT
  PRIVATE
  PUBLIC
}
